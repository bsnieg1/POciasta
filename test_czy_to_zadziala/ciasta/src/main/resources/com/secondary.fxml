   <children>
      <!-- Navigation Buttons -->
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="200.0" text="PRZEPISY" onAction="#switchToPrimary">
         <font>
